<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="xml.manytomany.entity.Book" table="books">
        <!-- Ключевое поле -->
        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="increment"/>
        </id>
        <!-- Связываем поля класса-->
        <property name="title" type="java.lang.String" length="25">
            <column name="TITLE" length="25"/>
        </property>

        <bag name="authors" table="BOOKS_AUTHORS" lazy="false">
            <key column="author_id"></key>
            <many-to-many column="book_id" class="xml.manytomany.entity.Book"/>
        </bag>

    </class>
</hibernate-mapping>